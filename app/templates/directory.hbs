{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    Files in
    {{path-breadcrumb path=model.path}}
    /
    {{#if model.name}}
      {{model.name}} /
    {{/if}}

    {{partial 'file-upload'}}
  </div>
{{/paper-toolbar}}

{{#paper-list class="file-list"}}
  {{#each model.sortedFiles as |file|}}
    {{#paper-item}}
      {{#if file.isDirectory}}
        {{paper-icon icon="folder"}}
      {{else}}
        {{paper-icon icon=file.type}}
      {{/if}}

      <p>
        {{#link-to 'file' file.path}}
          {{file.name}}
        {{/link-to}}
      </p>
    {{/paper-item}}
  {{/each}}

{{/paper-list}}
