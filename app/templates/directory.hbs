{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    Files in
    {{path-breadcrumb path=model.path}}
    /
    {{#if model.name}}
      {{model.name}} /
    {{/if}}

    {{partial 'file-upload'}}
  </div>
{{/paper-toolbar}}

<table class="file-list">
  <thead>
    <tr>
      <th class="name">Name</th>
      <th class="size">Size</th>
    </tr>
  </thead>

  <tbody>
    {{#each model.sortedFiles as |file|}}
      <tr>
        <td class="name">
          {{#if file.isDirectory}}
            {{paper-icon icon="folder"}}
          {{else}}
            {{paper-icon icon=file.type}}
          {{/if}}

          {{#link-to 'file' file.path}}
            {{file.name}}
          {{/link-to}}
        </td>

        <td class="size">
          {{filesize file.size}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
